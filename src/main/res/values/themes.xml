    <style name="Theme.EventFinder" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
<!--        <item name="colorPrimary">@color/purple_500</item>-->
